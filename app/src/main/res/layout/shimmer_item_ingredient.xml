<?xml version="1.0" encoding="utf-8"?>
<com.facebook.shimmer.ShimmerFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10dp">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/image_category"
            android:layout_width="@dimen/_80dp"
            android:layout_height="@dimen/_80dp"
            android:background="@color/color_gray"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:riv_border_color="@color/color_primary_varient"
            app:riv_border_width="@dimen/_1dp"
            app:riv_corner_radius="@dimen/conner_radius_35" />

        <TextView
            android:id="@+id/text_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10dp"
            android:background="@color/color_gray"
            android:ellipsize="end"
            android:text="@string/app_name"
            android:textAlignment="center"
            android:textColor="@color/color_gray"
            android:textSize="@dimen/text_size_normal"
            app:layout_constraintEnd_toEndOf="@id/image_category"
            app:layout_constraintStart_toStartOf="@id/image_category"
            app:layout_constraintTop_toBottomOf="@id/image_category" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</com.facebook.shimmer.ShimmerFrameLayout>
